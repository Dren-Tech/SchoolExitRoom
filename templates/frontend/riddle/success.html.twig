{% extends 'frontend/base.html.twig' %}

{% block title %}{{ riddle.title }}{% endblock %}

{% block frontend_content %}
    <!--<h1 class="text-4xl text-center underline">Richtig! Dein Code war korrekt!</h1>-->

    <div class="flex justify-center items-center my-4">
        <div class="w-1/4">
            <img src="/img/codegeknackt.png" alt="Code geknackt">
        </div>
        <div class="w-3/4 text-center text-4xl">
            {% autoescape %}
                {{ riddle.successMessage|raw }}
            {% endautoescape %}
        </div>
    </div>

    {% if riddle.nextRiddle %}
    <div class="my-6 flex justify-center">
        <a href="{{ path('frontend_riddle_detail', {'riddleIdentifier': riddle.nextRiddle.identifier}) }}" class="py-2 px-4 border border-transparent text-lg rounded-md text-white bg-indigo-600 hover:bg-indigo-700">Hier gehts zum nächsten Rätsel</a>
    </div>
    {% endif %}
{% endblock %}
